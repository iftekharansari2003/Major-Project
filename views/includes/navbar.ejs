            <a class="nav-link" href="/login" style="text-decoration: none;"><b><i class="fa-solid fa-arrow-right-to-bracket"></i> &nbsp;&nbsp;Login</b></a>
            <a class="nav-link" href="/listings/new" style="text-decoration: none;"><i class="fa-solid fa-hotel"></i> &nbsp;Add your Hotel</a>
            <% } %> <% if(curruser) { %>
