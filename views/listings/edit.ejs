<%layout("../layouts/boilerplate")-%>
<body>
    <div class="row mt-3">
        <div class="col col-6 offset-3">
            <br><br>
            <h3>Edit Your Advertisement</h3>
            <form action="/listings/<%=list._id%>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" value="<%=list.title%>" id="title" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
        
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" name="listing[description]" rows="5" cols="60" id="description" class="form-control" required><%=list.description%></textarea>
                    <div class="invalid-feedback">
                        Please enter short description
                    </div>
                </div>

                <div class="mb-3">
                    <p>Preview Image</p>
                    <img src="<%=newImageUrl%>" style="height: 150px; width: 250px;">
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input type="file" name="listing[image]" class="form-control" id="image">
                    <div class="invalid-feedback">
                        Please valid Image Link
                    </div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="listing[price]" value="<%=list.price%>" class="form-control" id="price" required>
                        <div class="invalid-feedback">
                            Please provide a valid Price.
                        </div>
                    </div>
            
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" value="<%=list.location%>" class="form-control" id="location" required>
                        <div class="invalid-feedback">please provide valid location</div>
                    </div>

                </div>
        
                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" value="<%=list.country%>" class="form-control" id="country" required>
                    <div class="invalid-feedback">please provide valid Country</div>
                </div>
                <br><br>
                <button class="btn btn-dark add-btn">Edit list</button>
                <br><br><br>
            </form>
        </div>
    </div>
</body>
</html>