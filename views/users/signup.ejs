<%layout("../layouts/boilerplate")-%>
<div class="row mt-3">
    <h1 class="col-6 offset-3 sign-h">SignUp</h1>
    <p class="col-6 offset-3 sign-p">Please fill in this form to create an account!</p>
    <div class="col-6 offset-3 sign-form">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3 sign-opt">
                <label for="username" class="form-label"><b><i class="fa-solid fa-user"></i> &nbsp;Username</b></label>
                <input type="text" name="username" placeholder="Enter Username" class="form-control form-input" id="username"
                required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3 sign-opt">
                <label for="email" class="form-label"><b><i class="fa-solid fa-envelope"></i> &nbsp;Email</b></label>
                <input type="text" placeholder="Enter Email" name="email" class="form-control form-input" id="email"
                required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3 sign-opt">
                <label for="password" class="form-label"><b><i class="fa-solid fa-lock"></i> &nbsp;Password</b></label>
                <input type="password" name="password" class="form-control form-input" id="password" placeholder="Enter Password"
                required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <button class="btn signup mt-3">SignUp</button>
        </form>
        <h5>Already have an account? &nbsp;<a href="/login" style="color: red; text-decoration: none; ">Login</a></h5>
    </div>
</div>